{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-5">
    {{ form_start(form, {'attr': {'method': 'POST', 'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="mb-3">
        {{ form_label(form.username, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.username, {'attr': {'class': 'invalid-feedback'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email, {'attr': {'class': 'invalid-feedback'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.password, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.password, {'attr': {'class': 'invalid-feedback'}}) }}
    </div>

    <button type="submit" class="btn btn-primary">Cr√©er un compte</button>

    {{ form_end(form) }}
{% endblock %}