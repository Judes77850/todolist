{% extends 'base.html.twig' %}

{% block title %}Créer une tâche{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <div class="container mt-5">
        <h1>Créer une nouvelle tâche</h1>

        <form method="POST" action="{{ path('task_create') }}">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="mb-3">
                <p>Titre :</p>
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.title, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="mb-3">
                <p>Contenu :</p>
                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.content, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Créer</button>
            </div>

            {{ form_end(form) }}
        </form>

        <a href="{{ path('task_index') }}" class="btn btn-secondary mt-3">Retour à la liste des tâches</a>
    </div>
{% endblock %}
