{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Tâches terminées</h1>
        <ul class="list-group">
            {% for task in tasks %}
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h5>{{ task.title }}</h5>
                            <p>{{ task.content }}</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <li class="list-group-item">Aucune tâche terminée.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
