{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}

    <div class="container mt-4">
        <h1 class="mb-4">Liste des tâches {% if app.user %}de {{ app.user.username }}{% else %}{% endif %}</h1>

        <a href="{{ path('task_create') }}" class="btn btn-primary mb-3">Créer une nouvelle tâche</a>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Contenu</th>
                    <th scope="col">Date de création</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.title }}</td>
                        <td>{{ task.content }}</td>
                        <td>{{ task.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            {% if task.isDone %}
                                <span class="badge bg-success">Terminée</span>
                            {% else %}
                                <span class="badge bg-warning">En cours</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-warning btn-sm me-2">Modifier</a>

                            <form action="{{ path('task_delete', {'id': task.id}) }}" method="POST" style="display:inline;">
                                <button class="btn btn-danger btn-sm"
                                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?')">Supprimer
                                </button>
                            </form>

                            <form action="{{ path('task_toggle', {'id': task.id}) }}" method="POST" style="display:inline;">
                                {% if not task.isDone %}
                                    <button class="btn btn-success btn-sm">Marquer comme terminée</button>
                                {% else %}
                                    <button class="btn btn-secondary btn-sm">Marquer comme non terminée</button>
                                {% endif %}
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune tâche à afficher</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
